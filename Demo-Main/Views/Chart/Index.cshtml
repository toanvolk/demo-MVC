
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Inline Charts</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/Template/Chart/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Template/Chart/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/Template/Chart/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Template/Chart/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="/Template/Chart/dist/css/skins/_all-skins.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <!-- /.callout -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-solid">
                            <div class="box-header">
                                <h3 class="box-title text-danger">Sparkline Pie</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-default btn-sm"><i class="fa fa-refresh"></i></button>
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body text-center">
                                <div class="sparkline" data-type="pie" data-offset="90" data-width="200px" data-height="200px">
                                    6,4,8,50,43,432
                                </div>
                                <div class="display-fields">
                                    <ul class="chart-legend clearfix">
                                        <li >
                                            <i class="fa fa-circle text-red">
                                                Test
                                            </i>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="/Template/Chart/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/Template/Chart/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/Template/Chart/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>

    <!-- AdminLTE App -->
    <script src="/Template/Chart/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/Template/Chart/dist/js/demo.js"></script>
    <!-- Sparkline -->
    @*<script src="/Template/Chart/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>*@
    <script src="/Template/Chart/bower_components/jquery-sparkline/dist/jquery.sparkline.js"></script>
    <!-- page script -->
    <script>
        var objList = [{
                Value: 120,
                Name: "Gia tri 1",
            },{
                Value: 200,
                Name: "Gia tri 2",
            },{
                Value: 180,
                Name: "Gia tri 3",
            },{
                Value: 100,
                Name: "Gia tri 4",
            },]
        var toArray = function (fieldName, obj) {
            var arr = [];
            $.each(obj, function (i, value) {
                arr.push(value[fieldName]);
            });
            return arr;
        }
        $(function () {
            
            $(".sparkline").sparkline_pieObj(
                toArray('Value', objList), 
                toArray('Name', objList),
                { type: 'pie', width: 'auto', height: '200px', offset: "90", areaDisplay: ".display-fields" });
           // drawDocSparklines();

        });
        function drawDocSparklines() {
            // Pie charts
            $('.sparkpie').sparkline('html', { type: 'pie', height: '2.0em' });
        }
    </script>
</body>
</html>

